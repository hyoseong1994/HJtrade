<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="310.0" prefWidth="400.0"
fx:controller="control.JoinController"
	xmlns:fx="http://javafx.com/fxml/1" >
	<VBox alignment="CENTER">
		<padding>
			<Insets top="20" right="10" bottom="20" left="10" />
		</padding>
		<spacing>10</spacing>
		<children>
			<Label text="직원 등록 " />
			
			<Separator prefHeight="30" prefWidth="400" />
			<HBox alignment="CENTER">
				<Label text="직원코드 : " />
				<TextField fx:id="txtId" />
			</HBox>
			<HBox alignment="CENTER">
				<Label text="비밀번호 : " />
				<PasswordField fx:id="txtPassword" />
			</HBox>
			<HBox alignment="CENTER">
				<Label text="비밀번호  확인 : " />
				<PasswordField fx:id="txtPasswordRepeat" />
			</HBox>
			
			<HBox alignment="CENTER">
				<Label text="이	   름 : " />
				<TextField fx:id="txtName" />
			</HBox>
			<HBox alignment="CENTER">
				<Label text="주	   소 : " />
				<TextField fx:id="txtAddress" />
			</HBox>
			<HBox alignment="CENTER">
				<Label text="전화번호 : " />
				<TextField fx:id="txtPhone" />
			</HBox>
			<HBox alignment="CENTER">
				<padding>
					<Insets top="20" right="10" bottom="20" left="10" />
				</padding>
				<spacing>20</spacing>
				<Button fx:id="btnOverlap" text="직원코드 중복 확인" />
				<Button fx:id="btnJoin" text="등록" />
				<Button fx:id="btnCancel" text="닫기" />
			</HBox>
		</children>
	</VBox>
</AnchorPane>
